<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".TELAS.AlterarTarefaActivity"
    android:theme="@style/Theme.TaskList.NoActionBar">

    <EditText
        android:id="@+id/til_alterar_descricao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="@string/hint_tarefa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118"
        android:background="@color/white"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:minHeight="48dp"
        />

    <Button
        android:id="@+id/btn_alterar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="130dp"
        android:backgroundTint="#03A9F4"
        android:text="@string/btn_alterar"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42"/>

    <TextView
        android:id="@+id/txt_alterar_data"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:background="#03A9F4"
        android:layout_marginStart="20dp"
        android:text="@string/txt_data"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_alterar_descricao"
        app:layout_constraintVertical_bias="0.056" />

    <TextView
        android:id="@+id/txt_alterar_hora"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:text="@string/txt_hora"
        android:background="#03A9F4"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_alterar_descricao"
        app:layout_constraintVertical_bias="0.056" />

    <Switch
        android:id="@+id/swt_realizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Realizado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.350" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="29dp"
        android:text="@string/txt_titulo2"
        android:textSize="37dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/til_alterar_descricao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>